            BackgroundColor="#fff" BorderRadius="30"/>
        <Button Grid.Row="2" Grid.Column="1" Text="5" FontSize="30"
            BackgroundColor="#fff" BorderRadius="30"/>
        <Button Grid.Row="2" Grid.Column="2" Text="6" FontSize="30"
            BackgroundColor="#fff" BorderRadius="30"/>
        <Button Grid.Row="3" Grid.Column="0" Text="7" FontSize="30"
            BackgroundColor="#fff" BorderRadius="30"/>
        <Button Grid.Row="3" Grid.Column="1" Text="8" FontSize="30"
            BackgroundColor="#fff" BorderRadius="30"/>
        <Button Grid.Row="3" Grid.Column="2" Text="9" FontSize="30"
            BackgroundColor="#fff" BorderRadius="30"/>

        <Button Grid.Row="4" Grid.Column="1" Text="0" FontSize="30"
            BackgroundColor="#fff" BorderRadius="30"/>

        <Button Grid.Row="5" Grid.Column="0" Text="Dial" FontSize="30"
            BackgroundColor="#96ca2d" BorderRadius="30" Grid.ColumnSpan="3"/>
    </Grid>
</ContentPage>
