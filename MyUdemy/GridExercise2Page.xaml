<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MyUdemy.GridExercise2Page"
    Padding="0,20,0,0">

    <Grid
        BackgroundColor="#127ac7"
        Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" Orientation="Vertical" HorizontalOptions="Center">
            <Label Text="Welcome to Xamarin" FontSize="30" FontAttributes="Bold"
            HorizontalOptions="Center" TextColor="#fff"/>
            <Label Text="Cross-platform apps made easy" TextColor="#fff" HorizontalOptions="Center"/>
        </StackLayout>
        <Button Grid.Row="1" Text="Login" BackgroundColor="#1dabf0"/>
        <Button Grid.Row="2" Text="Register" BackgroundColor="#1dabf0"/>
    </Grid>
</ContentPage>
